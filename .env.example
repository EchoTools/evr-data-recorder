# EVR Data Recorder Environment Variables
# Copy this file to .env and fill in your values
# All configuration can be set via environment variables with the EVR_ prefix

# Global configuration
EVR_DEBUG=false
EVR_LOG_LEVEL=info
EVR_LOG_FILE=

# Agent configuration
EVR_AGENT_FREQUENCY=10
EVR_AGENT_FORMAT=replay
EVR_AGENT_OUTPUT_DIRECTORY=./output

# Stream credentials (if using streaming)
EVR_AGENT_STREAM_ENABLED=false
EVR_AGENT_STREAM_HTTP_URL=https://g.echovrce.com:7350
EVR_AGENT_STREAM_SOCKET_URL=wss://g.echovrce.com:7350/ws
EVR_AGENT_STREAM_HTTP_KEY=your_http_key_here
EVR_AGENT_STREAM_SERVER_KEY=your_server_key_here
EVR_AGENT_STREAM_USERNAME=your_username_here
EVR_AGENT_STREAM_PASSWORD=your_password_here

# Events API configuration
EVR_AGENT_EVENTS_ENABLED=false
EVR_AGENT_EVENTS_URL=http://localhost:8081
EVR_AGENT_EVENTS_USER_ID=
EVR_AGENT_EVENTS_NODE_ID=default-node

# API Server configuration
EVR_APISERVER_SERVER_ADDRESS=:8081
EVR_APISERVER_MONGO_URI=mongodb://localhost:27017

# Converter configuration
EVR_CONVERTER_OUTPUT_DIR=./
EVR_CONVERTER_FORMAT=auto
EVR_CONVERTER_VERBOSE=false
EVR_CONVERTER_OVERWRITE=false

# Replayer configuration
EVR_REPLAYER_BIND_ADDRESS=127.0.0.1:6721
EVR_REPLAYER_LOOP=false
